package Demo;                             
import java.util.Scanner;

public class Demo {
	public static void display(int n) {
		
	if(n==0) {
		return;
	}
	               
	System.out.print(n+" ");
	display(n-1);
	
}

	public static void main(String[] args) {
		Scanner sc  =new Scanner (System.in);
		int n=5;
		display(n);                     //output->5 4 3 2 1

	}

}
